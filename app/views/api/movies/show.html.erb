<h1>Update Movie</h1>

<form action="/movies/ <% @movie.id %>" method="post" >
  <input type="hidden" name="method" value="patch">
  <div>Title: <input type="text" name="name" value="<%= @movie.title %>"></div> <br>
  <div>Year: <input type="text" name="name" value="<%= @movie.year %>"></div> <br>
  <div>Plot: <input type="text" name="name" value="<%= @movie.plot %>"></div> <br>
  <div>Director: <input type="text" name="name" value="<%= @movie.director %>"></div> <br>
  <input type="submit">
</form>
